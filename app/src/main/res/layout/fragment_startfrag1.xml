<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Start.startfrag1"
   >

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".10"
        android:id="@+id/guide"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/guide"
        android:id="@+id/lay">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/newimgpng2"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/newimgpng"
            android:layout_marginEnd="15dp"
            />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lay"
        android:layout_marginTop="20dp"
        android:id="@+id/radio">
        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:id="@+id/night"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="تم شب"
            android:fontFamily="@font/vazir"
            app:lrb_checkedColor="#f40187f4"
            app:lrb_explodeCount="3"
            app:lrb_inAnimDuration="500"
            app:lrb_innerCircleRadius="10dp"
            app:lrb_outAnimDuration="500"
            app:lrb_outterPadding="8dp"
            app:lrb_strokeRadius="12dp"
            app:lrb_strokeWidth="1dp"
            android:layout_marginStart="50dp"
             />
        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:id="@+id/day"
            android:layout_marginStart="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="تم روز"
            android:fontFamily="@font/vazir"
            app:lrb_checkedColor="#f40187f4"
            app:lrb_explodeCount="3"
            app:lrb_inAnimDuration="500"
            app:lrb_innerCircleRadius="10dp"
            app:lrb_outAnimDuration="500"
            app:lrb_outterPadding="8dp"
            app:lrb_strokeRadius="12dp"
            app:lrb_strokeWidth="1dp"
            />

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تم برنامه را انتخاب کنید\n
تم و فونت برنامه را میتوانید در قسمت تنظیمات تغییر دهید."
        app:layout_constraintTop_toBottomOf="@id/radio"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/vazir"
        android:id="@+id/tt"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:src="@drawable/next"
        android:background="#a4a4a4"
        app:layout_constraintTop_toBottomOf="@id/tt"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:id="@+id/next"

        />


</android.support.constraint.ConstraintLayout>